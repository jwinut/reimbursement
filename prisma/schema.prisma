// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  EMPLOYEE
  MANAGER
}

model User {
  id          String    @id @default(cuid())
  lineId      String    @unique
  displayName String?
  pictureUrl  String?
  role        Role      @default(EMPLOYEE)
  isApproved  Boolean   @default(false)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // NextAuth relations
  accounts Account[]
  sessions Session[]
  expenses Expense[]

  // Approval workflow - expenses this user has approved
  approvedExpenses Expense[] @relation("ApprovedExpenses")

  // Summaries generated for this user
  summaries Summary[]
}

enum ExpenseStatus {
  PENDING
  APPROVED
  REJECTED
  REIMBURSED
}

model Expense {
  id          String        @id @default(cuid())
  description String
  amount      Float
  date        DateTime
  imageUrl    String?
  status      ExpenseStatus @default(PENDING)
  userId      String
  user        User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  // Approval workflow fields
  approverId      String?
  approver        User?     @relation("ApprovedExpenses", fields: [approverId], references: [id])
  rejectionReason String?
  approvalDate    DateTime?

  // Payment tracking fields
  paidDate        DateTime?
  paidAmount      Decimal?  @db.Decimal(10, 2)
}

enum SummaryTriggerType {
  MANUAL
  SUBMISSION
  SCHEDULED
}

model Summary {
  id           String             @id @default(cuid())
  userId       String
  user         User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  startDate    DateTime
  endDate      DateTime
  totalAmount  Decimal            @db.Decimal(10, 2)
  expenseCount Int
  expenses     Json               // Snapshot of expense IDs and amounts at generation time
  triggerType  SummaryTriggerType
  createdAt    DateTime           @default(now())

  @@index([userId])
  @@index([createdAt])
}

// NextAuth.js Models
// https://next-auth.js.org/adapters/prisma

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
